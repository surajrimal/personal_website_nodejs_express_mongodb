<body>
    <div class="content">
        <section>
            <form action="feedback" method="POST" id="contact-me" onkeyup="clearError()" onchange="clearError()">
                <h3>Please leave your comment.</h3>
                <label for="fname">Full Name:</label><br>
                <input type="text" id="fname" name="fname" required><br>
                <label for="address">Address:</label><br>
                <input type="text" id="address" name="address" ><br>
                <label for="phone">Phone number:</label><br>
                <input type="number" id="phone" name="phone" minlength="10" ><br>
                <label for="email">Email:</label><br>
                <input type="email" id="email" name="email" required><br>
                <label for="review">Comments:</label><br>
                <textarea id="review" name="comment" rows="10" required></textarea><br>

                <button type="submit">Submit</button>
                {{#if success}}
                <div id="success">{{success}}</div>
                {{/if}}
                {{#if error}}
                <div id="error">{{error}}</div>
                {{/if}}
            </form>
        </section>
    </div>

</body>